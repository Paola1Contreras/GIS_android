<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ep_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP Name"
            android:id="@+id/op_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ep_image"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAIESECblue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="OP status"
            android:id="@+id/op_status"
            android:layout_below="@+id/op_name"
            android:layout_alignLeft="@+id/op_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="OP Programme"
            android:id="@+id/op_prog"
            android:layout_below="@+id/op_status"
            android:layout_alignLeft="@+id/op_status" />
    </RelativeLayout>

</LinearLayout>